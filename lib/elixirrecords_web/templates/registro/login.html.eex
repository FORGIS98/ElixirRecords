<%= form_for @conn, Routes.registro_path(@conn, :login), fn f -> %>
  <fieldset>
    <%= label f, :email, "Correo Institucional" %>
    <%= text_input f, :email, placeholder: "@alumnos.upm.es" %>
    <%= submit "Login", class: "button button-primary center", style: "background-color: #674ea7; border-color: #674ea7;" %>
    <p class="alert alert-info"><%= get_flash(@conn, :ok) %></p>
    <p class="alert alert-danger"><%= get_flash(@conn, :error) %></p>
  </fieldset>
<% end %>

